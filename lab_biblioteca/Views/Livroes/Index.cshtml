@model IEnumerable<lab_biblioteca.Models.Livro>

    @{
    ViewData["Title"] = "Livros Disponíveis";
    }

    <!DOCTYPE html>
    <html lang="pt">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
        <style>
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 20px;
                background-color: #2E2E2E;
                color: white;
            }

            h1 {
                text-align: center;
                margin-bottom: 30px;
            }

            table {
                width: 100%;
                border-collapse: collapse;
                background-color: #333333;
                color: white;
                text-align: center;
                border-radius: 8px;
                overflow: hidden;
            }

            th, td {
                padding: 10px;
                border: 1px solid #555555;
            }

            th {
                background-color: #222222;
                font-weight: bold;
            }

            tr:nth-child(even) {
                background-color: #444444;
            }

            .container {
                margin-top: 30px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Livros Disponíveis</h1>
            <table>
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Autor</th>
                        <th>Gênero</th>
                        <th>Preço</th>
                        <th>ISBN</th>
                        <th>Exemplares</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var livro in Model)
                {
                    <tr>
                        <td>@livro.Titulo</td>
                        <td>@livro.Autor</td>
                        <td>@livro.Genero</td>
                        <td>@livro.Preco.("C")</td>
                        <td>@livro.Isbn</td>
                        <td>@livro.NumExemplares</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </body>
</html>
