@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #2E2E2E;
            color: white;
            font-family: Arial, sans-serif;
        }

        .container {
            text-align: center;
        }

        .title {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .btn-custom {
            display: block;
            margin: 10px auto;
            width: 250px;
            padding: 10px;
            font-size: 1rem;
            text-transform: uppercase;
            background-color: white;
            color: #2E2E2E;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #D3D3D3;
                color: black;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="title">Login</div>
        <form>
            <button type="button" onclick="window.location.href='@Url.Action(" LoginBibliotecario", "Account" )'" class="btn-custom">Bibliotecário</button>
            <button type="button" onclick="window.location.href='@Url.Action(" LoginLeitor", "Account" )'" class="btn-custom">Leitor</button>
            <button type="button" onclick="window.location.href='@Url.Action(" LoginAdministrador", "Account" )'" class="btn-custom">Administrador</button>
        </form>
    </div>
</body>
</html>
