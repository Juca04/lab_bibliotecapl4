@{
    ViewData["Title"] = "Biblioteca LEI-UTAD";
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #2E2E2E; /* Fundo escuro */
            color: white; /* Texto branco */
            font-family: Arial, sans-serif;
        }

        .top-buttons {
            position: absolute;
            top: 20px;
            left: 20px;
        }

        .btn-top {
            background-color: white;
            color: #2E2E2E;
            border: none;
            padding: 8px 16px;
            margin-right: 10px;
            font-size: 1rem;
            text-transform: uppercase;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .btn-top:hover {
                background-color: #D3D3D3;
                color: black;
            }

        .container {
            text-align: center;
        }

        .title {
            font-size: 3rem;
            font-weight: bold;
        }

        .subtitle {
            font-size: 2rem;
            margin-bottom: 30px;
        }

        .btn-custom {
            display: block;
            margin: 10px auto;
            width: 200px;
            padding: 10px;
            font-size: 1rem;
            text-transform: uppercase;
            background-color: white;
            color: #2E2E2E;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #D3D3D3;
                color: black;
            }
    </style>
</head>
<body>
    <!-- Botões no canto superior esquerdo -->
    <div class="top-buttons">
        <a href="@Url.Action("Index", "Home")" class="btn-top">Página Inicial</a>
        <a href="@Url.Action("Info", "Home")" class="btn-top">Informações</a>
    </div>

    <!-- Conteúdo centralizado -->
    <div class="container">
        <div class="title">Biblioteca</div>
        <div class="subtitle">LEI-UTAD</div>
        <form>
            <button type="button" onclick="window.location.href='@Url.Action("Login", "Account")'" class="btn-custom">Login</button>
            <button type="button" onclick="window.location.href='@Url.Action("Register", "Account")'" class="btn-custom">Registo</button>
        </form>
    </div>
</body>
</html>
